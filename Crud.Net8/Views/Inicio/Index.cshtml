@model IEnumerable<Crud.Net8.Models.Contacto>
@{
    ViewData["Title"] = "Lista de Contactos";
}

<h1 class="text-center">Contactos con .NET 8</h1>

<div class="row mb-3">
    <div class="col-12 d-flex justify-content-end">
        <a asp-action="Crear" asp-controller="Inicio" class="btn btn-secondary btn-lg">
            <i class="fa fa-plus" aria-hidden="true"></i> Nuevo Usuario
        </a>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white mb-0"><strong>Lista de Usuarios</strong></h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    @if (Model != null && Model.Any())
                    {
                        <table class="table table-bordered table-striped align-middle" id="tblUsuarios" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(m => m.First().Id)</th>
                                    <th>@Html.DisplayNameFor(m => m.First().Nombre)</th>
                                    <th>@Html.DisplayNameFor(m => m.First().Celular)</th>
                                    <th>@Html.DisplayNameFor(m => m.First().Email)</th>
                                    <th>@Html.DisplayName("Fecha de creación")</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Nombre</td>
                                        <td>@item.Celular</td>
                                        <td>@item.Email</td>
                                        <td>@item.FechaCreacion.ToString("yyyy-MM-dd HH:mm")</td>
                                        <td class="d-flex gap-2">
                                            <a class="btn btn-warning" asp-action="Editar" asp-route-id="@item.Id">
                                                <i class="fa fa-pencil" aria-hidden="true"></i> Editar
                                            </a>
                                            <a class="btn btn-secondary" asp-action="Detalle" asp-route-id="@item.Id">
                                                <i class="fa fa-info-circle" aria-hidden="true"></i> Detalle
                                            </a>
                                            <a class="btn btn-danger" asp-action="Borrar" asp-route-id="@item.Id">
                                                <i class="fa fa-eraser" aria-hidden="true"></i> Borrar
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="mb-0">No hay registros</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
