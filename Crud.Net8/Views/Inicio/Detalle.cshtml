@model Crud.Net8.Models.Contacto
@{
    ViewData["Title"] = "Detalle de Contacto";
}

<div class="container py-4">
    <h1 class="text-center mb-4">Detalle de Contacto</h1>

    <div class="row">
        <div class="col-12 col-md-8 offset-md-2">
            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white">
                    <h3 class="mb-0">Información</h3>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Id</dt>
                        <dd class="col-sm-9">@Model.Id</dd>

                        <dt class="col-sm-3">Nombre</dt>
                        <dd class="col-sm-9">@Model.Nombre</dd>

                        <dt class="col-sm-3">Celular</dt>
                        <dd class="col-sm-9">@Model.Celular</dd>

                        <dt class="col-sm-3">Email</dt>
                        <dd class="col-sm-9">@Model.Email</dd>

                        <dt class="col-sm-3">Fecha creación</dt>
                        <dd class="col-sm-9">@Model.FechaCreacion.ToString("yyyy-MM-dd HH:mm")</dd>
                    </dl>
                </div>
                <div class="card-footer d-flex gap-2">
                    <a asp-action="Editar" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="fa fa-pencil"></i> Editar
                    </a>
                    <a asp-action="Borrar" asp-route-id="@Model.Id" class="btn btn-danger">
                        <i class="fa fa-eraser"></i> Borrar
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">Volver</a>
                </div>
            </div>
        </div>
    </div>
</div>
