@model Crud.Net8.Models.Contacto
@{
    ViewData["Title"] = "Crear nuevo contacto";
}

<div class="container py-4">
    <h1 class="text-center mb-4">Contactos con .NET 8</h1>

    <div class="row">
        <div class="col-12 col-md-8 offset-md-2">
            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white">
                    <h3 class="mb-0"><strong>Crear contacto</strong></h3>
                </div>

                <div class="card-body">
                    <form asp-action="Crear" method="post">
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Nombre" class="form-label"></label>
                            <input asp-for="Nombre" class="form-control" placeholder="Ingresa el nombre" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Celular" class="form-label"></label>
                            <input asp-for="Celular" class="form-control" placeholder="Ingresa el celular" />
                            <span asp-validation-for="Celular" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" placeholder="Ingresa el email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mt-3 d-flex gap-2">
                            <button type="submit" class="btn btn-secondary">
                                <i class="fa fa-user" aria-hidden="true"></i> Crear contacto
                            </button>
                            <a asp-controller="Inicio"
                               asp-action="Index"
                               class="btn btn-light border rounded-pill px-4 py-2 d-inline-flex align-items-center gap-2 back-btn">
                                <i class="fa fa-arrow-left" aria-hidden="true"></i>
                                <span>Volver</span>
                            </a>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
